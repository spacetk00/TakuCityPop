@model IEnumerable<Usuario>
@{
    ViewData["Title"] = "Lista";
}

<div class="col-12">
   <div class="row">
        <h2 class="col-12">Lista</h2>
    </div>
    <div class="row bloco mx-xm-auto mx-lg-3">
        <table class="table table-striped table-dark table-hover mx-4 my-3 table-sm table-responsive w-100 d-block d-md-table">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Nome</th>
                    <th>Email</th>
                    <th>Data de Nascimento</th>
                </tr>
            </thead>
            <tbody>
                @foreach (Usuario usuario in Model)
                {
                    <tr>
                        <td>@usuario.Id</td>
                        <td>@usuario.Nome</td>
                        <td>@usuario.Email</td>
                        <td>@usuario.DataNascimento.ToShortDateString()</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>