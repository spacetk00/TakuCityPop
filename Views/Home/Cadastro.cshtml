@model Usuario;
@{
    ViewData["Title"] = "Cadastro";
}
<div class="col-12">
    <div class="row">
        <h2 class="col-12">Cadastro</h2>
    </div>
    <div class="row bloco mx-3">
        <p class="paragrafo mx-4">Se você tem interesse em ficar informado sobre eventos do servidor, se inscreva, e nós enviaremos um email pra você</p>
    </div>
    <div class="row bloco mx-3 justify-content-center">
        <form method="POST" asp-action="Cadastro" class="col-8">
            <p class="paragrafo-form mx-3">
                <label asp-for="Nome">Nome</label>
                <input asp-for="Nome" placeholder="insira seu nome"/>
            </p>
            <p class="paragrafo-form mx-3">
                <label asp-for="Email">Email</label>
                <input type="email" asp-for="Email"placeholder="insira seu email"/>
            </p>
            <p class="paragrafo-form mx-3">
                <label asp-for="DataNascimento">Data</label>
                <input type="date" asp-for="DataNascimento"/>
            </p>
            <p class="row paragrafo-form mx-3">
                <input type="submit" value="Cadastrar"id="confirmar"/>
            </p>
            <p id="confirma">
            @ViewBag.Mensagem
            </p>
        </form>
    </div>
</div>